export PATH="$HOME/bin:/opt/local/bin:/opt/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin:/opt/X11/bin:$PATH"

# MySQL export:
export PATH=$PATH:/opt/local/lib/mysql55/bin/
export EDITOR=vim
export COMMAND_MODE=unix2003
export LESSCHARSET=utf-8
export LESS="-erX"

export GREP_OPTIONS="--color=auto"
export CLICOLOR=1
export TERM="xterm-color"
export LSCOLORS=GxFxCxDxBxegedabagaced

# Don't show default interactive shell warning
export BASH_SILENCE_DEPRECATION_WARNING=1

# Postgres won't work without this
export PGHOST=/tmp

if [[ -n `which postgresql 2>/dev/null` ]]
	then postgresql startexport PGDATA=/usr/local/var/postgres
fi

# Exclude duplites from history (like mc <cd "`printf "%b">)
export HISTCONTROL="ignoreboth"

# Exclude uninformative commands
# export HISTIGNORE="&:ls:[bf]g:exit"

export LANG=C
export LC_ALL="ru_RU.UTF-8"
export LC_CTYPE="ru_RU.UTF-8"
export LC_NUMERIC="ru_RU.UTF-8"
export LC_TIME="ru_RU.UTF-8"
export LC_COLLATE="ru_RU.UTF-8"
export LC_MONETARY="ru_RU.UTF-8"
export LC_MESSAGES=C
export LC_PAPER="ru_RU.UTF-8"
export LC_NAME="ru_RU.UTF-8"
export LC_ADDRESS="ru_RU.UTF-8"
export LC_TELEPHONE="ru_RU.UTF-8"
export LC_MEASUREMENT="ru_RU.UTF-8"
export LC_IDENTIFICATION="ru_RU.UTF-8"


# termcap - terminal capability database
export LESS_TERMCAP_mb=$'\E[01;31m'       # begin blinking
export LESS_TERMCAP_md=$'\E[01;38;5;74m'  # begin bold
export LESS_TERMCAP_me=$'\E[0m'           # end mode
export LESS_TERMCAP_se=$'\E[0m'           # end standout-mode
export LESS_TERMCAP_so=$'\E[38;5;246m'    # begin standout-mode - info box
export LESS_TERMCAP_ue=$'\E[0m'           # end underline
export LESS_TERMCAP_us=$'\E[04;38;5;146m' # begin underline


